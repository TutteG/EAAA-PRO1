package opgave1;

import java.util.ArrayList;

class Car {
	private String license;
	private double pricePerDay;
	private int purchaseYear;
	private ArrayList<Rental> rentals = new ArrayList<Rental>();

	public Car(String license, int year) {
		// TODO Auto-generated constructor stub
		this.license = license;
		this.purchaseYear = year;
	}

	public int getDaysRented(ArrayList<ArrayList<Rental>> ArraylistRentals) {
		int daysRented = Integer.MIN_VALUE;
		for (ArrayList<Rental> arrayList : ArraylistRentals) {
			for (Rental rental : arrayList) {
				if (daysRented < rental.getDays()) {
					daysRented = rental.getDays();

				}
			}
		}
		return daysRented;
	}

	public void addRental(Rental rental) {
		rentals.add(rental);
	}

	public void removeRental(Rental rental) {
		rentals.remove(rental);
	}

	public void setDayPrice(double price) {
		// TODO Auto-generated method stub
		this.pricePerDay = price;
	}

	public double getDayPrice() {
		// TODO Auto-generated method stub
		return pricePerDay;
	}

	public String getLicense() {
		return license;
	}

	public int getPurchaseYear() {
		return purchaseYear;
	}
}
